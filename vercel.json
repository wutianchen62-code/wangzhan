{
  "version": 2,
  "builds": [
    {
      "src": "coding_agent.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxDuration": 60
      }
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/coding_agent.py"
    },
    {
      "src": "/",
      "dest": "/templates/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/templates/$1"
    }
  ]
}